{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://adboard-backend.onrender.com/api:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}