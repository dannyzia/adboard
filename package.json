    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
  },
  "vitest": {
    "globals": true,
    "environment": "jsdom",
    "setupFiles": "src/setupTests.ts"
  }
}
